<main>
	<%- include('../partials/customerSidebar') %>
	
	<div id="main-wrapper">
		
		<div class="bg-white shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Previous Donations</h5>
		</div>
		
		<div class="col col-sm-10 col-12 m-auto my-4" style="max-height: 75%; overflow: auto;">
			<table class="table table-info table-striped table-hover m-0 bg-white">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Food type</th>
						<th scope="col">Quantity</th>
                        <th scope="col">Price</th>
						<th scope="col">Owner</th>
						<th scope="col">Cooking Time</th>
						<th scope="col">Address</th>
						<th scope="col">Phone</th>
                        
					</tr>
				</thead>
				<tbody>
					<% for(let i=0; i<allfoods.length; i++) { %>
						<tr>
							<th scope="row"> <%= i+1 %> </th>
							<td> <%= allfoods [i].foodType %> </td>
							<td> <%= allfoods [i].quantity %> </td>
                            <td> <%= allfoods [i].price %> </td>
                            <td> <%= allfoods[i].donor.firstName + " " + allfoods[i].donor.lastName%> </td>
                            <td> <%= allfoods [i].cookingTime %> </td>
                            <td> <%= allfoods [i].address %> </td>
                            <td> <%= allfoods [i].phone %> </td>
                            
							
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
		
	</div>
</main>